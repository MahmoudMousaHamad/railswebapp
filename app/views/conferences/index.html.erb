<div class="container">

    <h1 class="page-title">Conferences in <%= @country.name %></h1>

    <% @country.conferences.each do |i| %>
        <div class="row">
            <div class="col s12 m7">
                <div class="card">
                    <div class="card-content">
                        <h4><%= i.name %></h4>
                        <p><b>City:</b> <%= i.city.name %></p>
                        <p><%= i.about.truncate(27) %></p>
                    </div>
                    <div class="card-action">
                        <%= link_to  "View " + i.name,
                        country_conference_path(@country, i) %>
                    </div>
                </div>
            </div>
        </div>
    <% end %>
</div>