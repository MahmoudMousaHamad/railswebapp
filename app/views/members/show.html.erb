<% title "#{@member.name}" %>
<div class="">
    <div class="row">
        <%= get_image_safe_url(@member.profile_photo, "profile_photo materialboxed") %>
        <br>
        <h1><%= @member.name %></h1>
    </div>

    <div class="row">
        <h2>BIO</h2>
        <% if @member.about %>
            <blockquote>
                <%= @member.about.html_safe %>
            </blockquote>
        <% end %>
    </div>

    <div class="row">
        <h2>PUBLIC INFO</h2>
        <% if @member.education_level %>
            <div>
                <label>Educational Level:</label> <%= @member.education_level %>
            </div>
        <% end %>
        <% if @member.specialization %>
            <div>
                <label>Specialization:</label> <%= @member.specialization %>
            </div>
        <% end %>
    </div>

    <%= render partial: "shared/download", locals: {params: params, file: @member.cv, text: "C.V."} %>
</div>