<%= carousel_for( @country.photos ) %>

<br>
<br>
<br>

<div class="container">
    <div class="about-country">
        <h2>About <%= @country.name %>: </h2>
        <p class="lead"><%= @country.about %></p>
    </div>
    <% @country.cities.each do |c| %>
        <div class="card" style="width: 55rem; margin: auto; margin-top: 100px">
            <img width="100%" class="card-img-top" src="<%= url_for(c.photos.first) %>" alt="Card image cap">
            <div class="card-body" style="padding: 20px;">
                <h3 class="card-title"><%= c.name %></h3>
                <h5 class="card-text"><%= c.tagline %></h5>
                <%= link_to  "View Sites in " + c.name,
                country_city_sites_path(c, @country), class: "btn btn-primary" %>
            </div>
        </div>
    <% end %>

    <br>
    <br>
    <br>

    <h3>Map of cities in <%= @country.name %></h3>
    <br>
    <div class="row">
        <div class="col-sm-8">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3492421.3133810614!2d34.878889704404976!3d31.26038889379136!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x15006f476664de99%3A0x8d285b0751264e99!2sJordan!5e0!3m2!1sen!2sus!4v1564190090180!5m2!1sen!2sus" width="100%" height="100%" frameborder="0" style="border:0"></iframe>
        </div>
        
        <div class="col-sm-4">
            <% @country.cities.each do |c| %>
                <%= link_to  c.name, country_city_sites_path(c, @country),
                class: "text-uppercase text-left" %>
            <% end %>
        </div>
    </div>
</div>