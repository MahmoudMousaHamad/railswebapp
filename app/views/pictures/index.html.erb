<div class="container">
    <div class="content">
        <h1><%= Country.find(params[:country_id]).name %>'s Photo Gallery</h1>

        <main class="grid content">
            <% @pictures.each do |p| %>
                <img class="materialboxed" width="100%" src="<%= url_for (p)%>" alt="Photo of a place in <%= Country.find(params[:country_id]).name %>">
            <% end %>
        </main>

        <%= paginate @pictures %>
    </div>
</div>