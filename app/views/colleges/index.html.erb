<%= carousel_for( @university.photos ) %>

<div class="container">

    <h1 class="page-title">Colleges in <%= @university.name %></h1>

    <% @university.colleges.each do |i| %>
        <div class="row">
            <div class="col s12 m7">
                <div class="card">
                    <div class="card-content">
                        <h4><%= i.name %></h4>
                        <p><%= i.about %></p>
                    </div>
                    <div class="card-action">
                        <%= link_to  "View Schools in " + i.name,
                        country_university_college_schools_path(params[:country_id], @university, i) %>
                    </div>
                </div>
            </div>
        </div>
    <% end %>
</div>