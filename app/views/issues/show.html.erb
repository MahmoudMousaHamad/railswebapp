<div class="row">
    <h2><%= @j.title %></h2>
<div>
<div class="row">
    <div class="col s4">
        <%= document_cover_for(@j.cover) %>
    </div>
    <div class="col s8">
        <h5><%= "Issue No. #{@i.number}, #{@i.year}, pp #{@i.pageFrom} - #{@i.pageTo}" %></h5>
        <h6>Coverage: <%= "#{@j.coverageFrom} - #{@j.coverageTo}" %></h6>
        <h6>Published by: <%= link_to  @j.publisher.name, publisher_path(@j.publisher), target: "_blank" if @j.publisher %></h6>
    </div>
</div>

<%= render partial: "shared/download", locals: {params: params, file: @i.pdf} %>