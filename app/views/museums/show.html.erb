<div class="container">
    <div class="about">
        <h2><%= @i.name %>: </h2>
        <p class="lead"> <%= @i.about %></p>
        <p><b>Address:</b> <%= Geocoder.search([@i.lat, @i.lng]).first.display_name %></p>
        <p><b>Website:</b> <%= link_to  "Visit website", @i.website, target: "_blank" %></p>
        <p><b>Ticket Price:</b></p>
        <p><%= @i.ticket_price %></p>
        <p><b>Working Hours:</b></p>
        <p><%= @i.working_hours %></p>
        <p><b>Location:</b></p>
        <%= location_map_for( @i.lat, @i.lng )%>
    </div>
</div>