<div class="container">
    <div class="content">
        <div class="row">
            <h2 class="title"><%= @b.title %></h2>
            <hr>
        <div>
        <div class="row">
            <div class="col s2">
                <%= image_tag  url_for(@b.cover), style: "max-width: 150px; margin-bottom: 20px;" %>
            </div>
            <div class="col s6" style="float: left;">
                <p><b>Author(s):</b> <%= safe_join(@b.authors.map { |s| link_to  s.name, author_path(s.name) }, ", ").html_safe %></p>
                <p><b>Publisher:</b> <%= link_to  @b.publisher.name, publisher_path(@b.publisher), target: "_blank" %></p>
                <p><b>Pages:</b> <%= @b.pages %></p>
                <p><b>Library Link:</b> <%= get_library_link(request) %></p>
                <%= show_info_for(@b, [:pages, :language, :year, :volume, :isbn, :keywords, :downloadable ]).html_safe %>
                <p><b>Subjects: </b> <%= safe_join(@b.subjects.map { |s| link_to  s.name, subject_path(s.name) }, ",").html_safe %> </p>
            </div>
            <div class="col s4">
                <ul class="collapsible popout">
                    <li>
                        <div class="collapsible-header">BOOK INFO</div>
                        <div class="collapsible-body">
                            <h4>Title: <%= @b.title %></h4>
                            <p>Book Description: </p>
                            <p><%= @b.about %></p>
                        </div>
                    </li>
                </ul>
            </div>
        </div>

        <div class="row">
            <h3 class="title">Gain Access</h3>
            <hr>
            <% if @b.downloadable || @b.pdf != nil %>
                <%= link_to  "Download PDF", url_for(@b.pdf), target: "_blank" %>
            <% else %>
                <p>Sorry, this file is not avalable at the moment.</p>
            <% end %>
        </div>
    </div>
</div>