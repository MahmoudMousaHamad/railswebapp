<% if view == :detailed %>
    <a href="<%= book_path(b) %>"><h4><%= b.title %></h4></a>
    <p><b>Author(s): </b><%= safe_join(b.authors.map { |s| link_to  s.name, author_path(s.name) }, ", ").html_safe %> </p>
    <p><b>ISBN: </b> <%= b.isbn %> </p>
    <p><b>Subjects: </b> <%= safe_join(b.subjects.map { |s| link_to  s.name, subject_path(s.name) }, ",").html_safe %> </p>
    <p><b>Keywords: </b> <%= b.keywords %> </p>
<% else %>

    <td><%= b.library_id %></td>
    <td><%= b.class.name %></td>
    <td> <%= safe_join(b.authors.map { |s| link_to  s.name, author_path(s.name) }, ", ").html_safe %></td>
    <td><a href="<%= book_path(b) %>"><%= b.title %></a></td>
    <td><a href="<%= publisher_path(b.publisher) %>"><%= b.publisher.name %></a></td>
    <td><%= b.year %></td>
    <td><%= b.language %></td>
<% end %>